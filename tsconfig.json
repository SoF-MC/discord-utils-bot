{
    "extends": "@tsconfig/node18-strictest",
    "compilerOptions": {
        "rootDir": "./src",
        "checkJs": false,
        "allowJs": false,
        "outDir": "./build",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "ignoreDeprecations": "5.0",
        "newLine": "lf",
        "pretty": true,
        "noEmitOnError": true
    }
}
